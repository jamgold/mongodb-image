#!/bin/bash
cd ${HOME}/Meteor/mongodb-image
URL=mongodb-image.meteor.com
DATA=/Volumes/Home/jhm/Google\ Drive/mongodump

file="${DATA}/prod.$(date +%Y%m%d)"
mongourl=$(meteor mongo mongodb-image.meteor.com --url)
#mongourl="mongodb://client-6ab58631:54fb716c-5a8c-f0d5-1e33-5c8f839d2d29@production-db-b1.meteor.io:27017/fatcat_buzzledom_com"
mongourl1=$(echo $mongourl|cut -d/ -f3)
mongodb=$(echo $mongourl|cut -d/ -f4)
mongouserpassword=$(echo $mongourl1|cut -d@ -f1)
mongohostport=$(echo $mongourl1|cut -d@ -f2)
mongouser=$(echo $mongouserpassword|cut -d: -f1)
mongopass=$(echo $mongouserpassword|cut -d: -f2)
mongohost=$(echo $mongohostport|cut -d: -f1)
mongoport=$(echo $mongohostport|cut -d: -f2)
/usr/local/mongodb/bin/mongodump --host ${mongohost} --port ${mongoport} --db ${mongodb} --username ${mongouser} --password ${mongopass} --out "${file}"
